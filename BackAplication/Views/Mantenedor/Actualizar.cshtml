@model BDFIREBASE.Models.Producto
@{
    ViewBag.Title = "Actualizar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="panel panel-primary ">
    <div class="panel-heading ">
        <h4>Actualizar producto</h4>
    </div>
    <div class="panel-body">
        <form action="@Url.Action("Actualizar","Mantenedor")" method="post">

            <input type="hidden" name="IdProducto" value="@Html.DisplayTextFor(m=>m.IdProducto)" />
            <div class="form-group">
                <label>Nombre</label>
                <input class="form-control" type="text" name="Nombre" value="@Html.DisplayTextFor(m=>m.Nombre)" />
            </div>
            <div class="form-group">
                <label>Precio</label>
                <input class="form-control" type="text" name="Precio" value="@Html.DisplayTextFor(m=>m.Precio)" />
            </div>
            <div class="form-group">
                <label>Descripcion</label>
                <input class="form-control" type="text" name="Descripcion" value="@Html.DisplayTextFor(m=>m.Descripcion)" />
            </div>
            <div class="form-group">
                <label>Categoria</label>
                <input class="form-control" type="text" name="Categoria" value="@Html.DisplayTextFor(m=>m.Categoria)" />
            </div>
            <div class="form-group">
                <label>Marca</label>
                <input class="form-control" type="text" name="Marca" value="@Html.DisplayTextFor(m=>m.Marca)" />
            </div>
            <hr />
            <button type="submit" class="btn btn-primary"> Guardar cambios </button>

            <a class="btn btn-danger" href="@Url.Action("Inicio","Mantenedor")">Volver</a>
            <a></a>
        </form>

    </div>
</div>




